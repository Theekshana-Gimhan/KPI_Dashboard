@model IEnumerable<KPI_Dashboard.Models.VisaKPI>

<div class="container mt-4">
    <h2 class="text-center">Visa KPIs</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Inquiries</th>
                <th>Consultations</th>
                <th>Conversions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kpi in Model)
            {
                <tr>
                    <td>@kpi.EntryDate.ToString("yyyy-MM-dd")</td>
                    <td>@kpi.Inquiries</td>
                    <td>@kpi.Consultations</td>
                    <td>@kpi.Conversions</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a asp-action="Create" class="btn btn-primary">Add New KPI</a>
    </div>
</div>