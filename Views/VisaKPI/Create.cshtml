@model KPI_Dashboard.Models.VisaKPI

<div class="container mt-4">
    <h2 class="text-center">Add Visa KPI</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Inquiries" class="form-label"></label>
            <input asp-for="Inquiries" class="form-control" />
            <span asp-validation-for="Inquiries" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Consultations" class="form-label"></label>
            <input asp-for="Consultations" class="form-control" />
            <span asp-validation-for="Consultations" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Conversions" class="form-label"></label>
            <input asp-for="Conversions" class="form-control" />
            <span asp-validation-for="Conversions" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Next</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
     }