@model KPI_Dashboard.Models.AdmissionKPI

<div class="container mt-4">
    <h2 class="text-center">Confirm Admission KPI</h2>

    <div class="alert alert-info text-center">
        <p>Applications: @Model.Applications</p>
        <p>Consultations: @Model.Consultations</p>
    </div>

    <form asp-action="Confirm" method="post">
        <input type="hidden" asp-for="Applications" />
        <input type="hidden" asp-for="Consultations" />

        <div class="text-center">
            <button type="submit" class="btn btn-success">Confirm</button>
            <a asp-action="Create" class="btn btn-secondary">Change</a>
        </div>
    </form>
</div>