@model KPITargetsViewModel
@{
    ViewData["Title"] = "KPI Targets";
}

<h2 class="text-center mb-4">KPI Targets</h2>
<div class="row justify-content-center">
    <!-- Admissions Form -->
    <div class="col-md-5 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Admissions Department</h4>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="department" value="Admissions" />
                    <div class="mb-3">
                        <label class="form-label">Applications Target</label>
                        <input asp-for="AdmissionsApplications" class="form-control" type="number" min="0" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Consultations Target</label>
                        <input asp-for="AdmissionsConsultations" class="form-control" type="number" min="0" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Update Admissions Targets</button>
                    @if (Model.AdmissionsSuccessMessage != null)
                    {
                        <div class="alert alert-success mt-3" id="admissions-success">@Model.AdmissionsSuccessMessage</div>
                    }
                </form>
            </div>
        </div>
    </div>

    <!-- Visa Form -->
    <div class="col-md-5 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Visa Department</h4>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" name="department" value="Visa" />
                    <div class="mb-3">
                        <label class="form-label">Inquiries Target</label>
                        <input asp-for="VisaInquiries" class="form-control" type="number" min="0" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Consultations Target</label>
                        <input asp-for="VisaConsultations" class="form-control" type="number" min="0" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Conversions Target</label>
                        <input asp-for="VisaConversions" class="form-control" type="number" min="0" />
                    </div>
                    <button type="submit" class="btn btn-success w-100">Update Visa Targets</button>
                    @if (Model.VisaSuccessMessage != null)
                    {
                        <div class="alert alert-success mt-3" id="visa-success">@Model.VisaSuccessMessage</div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            var admMsg = document.getElementById('admissions-success');
            if (admMsg) admMsg.style.display = 'none';
            var visaMsg = document.getElementById('visa-success');
            if (visaMsg) visaMsg.style.display = 'none';
        }, 3000);
    </script>
}
